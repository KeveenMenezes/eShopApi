{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/eShopApi.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/eShopApi.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/eShopApi.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        // Docker Compose
        {
            "label": "docker-compose up",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "${workspaceFolder}/src/docker-compose.yml",
                "-f",
                "${workspaceFolder}/src/docker-compose.override.yml",
                "up",
                "-d",
                "--build"
            ]
        },
        {
            "label": "docker-compose down",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "${workspaceFolder}/src/docker-compose.yml",
                "-f",
                "${workspaceFolder}/src/docker-compose.override.yml",
                "down"
            ],
            "problemMatcher": []
        },
        // Dotnet Build
        {
            "label": "dotnet build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        // Composite Task
        {
            "label": "build and docker-compose up",
            "dependsOn": ["dotnet build", "docker-compose up"],
            "dependsOrder": "sequence"
        }
    ]
}
